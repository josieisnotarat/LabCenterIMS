{
  "name": "lab-center-ims",
  "version": "1.0.0",
  "private": true,
  "description": "Electron + SQLite Lab Center IMS",
  "main": "electron/main.js",
  "scripts": {
    "start": "node launch.js",
    "start:electron": "electron .",
    "dist": "electron-builder",
    "postinstall": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "electron": "^30.5.1"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "edu.cincinnatistate.labcenterims",
    "productName": "LabCenterIMS",
    "files": [
      "LabCenterIMS.html",
      "launch.js",
      "db/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
